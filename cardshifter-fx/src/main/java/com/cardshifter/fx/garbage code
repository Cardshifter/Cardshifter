///This did correctly print found
    //TARGETING
    public void markTargets(List<Targetable> targets) {
        List<Card> cardsInPlayerBattlefield = this.getBattlefield(game.getFirstPlayer());
        List<Card> cardsInOpponentBattlefield = this.getBattlefield(game.getLastPlayer());
        for (Targetable target : targets) {
            for (Card card : cardsInPlayerBattlefield) {
                if (target == card) {
                    System.out.println("found");
                }
            }
            for (Card card : cardsInOpponentBattlefield) {
                if (target == card) {
                    System.out.println("found");
                }
            }
        }        
    }

//this correctly prints also
    public void markTargets(List<Card> targets) {
        List<Node> cardsInPlayerBattlefield = player01Battlefield.getChildren();
        List<Node> cardsInOpponentBattlefield = player02Battlefield.getChildren();
        for (Card target : targets) {
            for(Node node : cardsInPlayerBattlefield) {
                if(node.getId().equals(String.format("card%d",target.getId())) == true) {
                    System.out.println("found friendly");
                }
            }
            for(Node node : cardsInOpponentBattlefield) {
                if(node.getId().equals(String.format("card%d",target.getId())) == true) {
                    System.out.println("found enemy");
                }
            }
        }
    }